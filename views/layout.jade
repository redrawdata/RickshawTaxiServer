doctype html
html
  head
    title #{title}: Express Website
    meta( charset="utf-8" )
    meta( http-equiv="X-UA-Compatible", content="IE-edge" )
    meta( name="viewport", content="width=device-width, initial-scale=1.0" )
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='//code.jquery.com/jquery-1.11.0.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/chat.js')
  body
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                    span.sr-only Toggle Navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#") Express Website
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li(class=(title === "Home" ? "active" : ""))
                        a(href="/") Home
                    li(class=(title === "About" ? "active" : ""))
                        a(href="/about") About Us
                    li(class=(title === "Members" ? "active" : ""))
                        a(href="/members") Members
                    if !user
                        li(class=(title === "Login" ? "active" : ""))
                            a(href="/users/login") Log In
                        li(class=(title === "Register" ? "active" : ""))
                            a(href="/users/register") Register
                    
                    li(class=(title === "Contact" ? "active" : ""))
                        a(href="/contact") Contact
                    ul.nav.navbar-nav.navbar-right
                    if user
                        li
                            a(href="/users/logout") Log Out
                    
    != messages()                
    block content
    footer
        p &copy; 2016 All Right Reserved
    
    script( src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" )
    script( src="/javascripts/bootstrap.js" )

