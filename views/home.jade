extends layout

block content 1

    h1 Welcome to Intelligent Rickshaw Barcelona

    #carousel.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
            li.active(data-target='#carousel', data-slide-to='0')
            li(data-target='#carousel', data-slide-to='1')
            li(data-target='#carousel', data-slide-to='2')
            li(data-target='#carousel', data-slide-to='3')
            li(data-target='#carousel', data-slide-to='4')
            li(data-target='#carousel', data-slide-to='5')
            
        .carousel-inner(role='listbox')
            .item.active
                img(src='images/slide1.jpg', alt='Connecting Drivers')
                .carousel-caption
                    h3 Connecting Drivers

            .item
                img(src='images/slide2.jpg', alt='Connecting Customers')
                .carousel-caption
                    .container
                        h3 Connecting Customers

            .item
                img(src='images/slide3.jpg', alt='Rickshaw Barcelona')
                .carousel-caption
                    .container
                        h3 Rickshaw Barcelona
                        
            .item
                img(src='images/slide4.jpg', alt='Rickshaw Riders')
                .carousel-caption
                    .container
                        h3 Rickshaw Riders
                        
            .item
                img(src='images/slide5.jpg', alt='Tours')
                .carousel-caption
                    .container
                        h3 Barcelona Tours
                        
            .item
                img(src='images/slide3.jpg', alt='Book Now')
                .carousel-caption
                    .container
                        h3 Book a Rickshaw Tour

        a.left.carousel-control(href='#carousel', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Previous
        a.right.carousel-control(href='#carousel', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
            span.sr-only Next
    

    .row
        .col-md-4
            h2 Tours
            p Hop into one of Barcelona's eco-friendly rickshaws and join your driver for a relaxing and informative guided tour of the city's ports, beaches, historic centre, parks and major attractions. 
            a.btn.btn-default(href="/tours") View Tours
        .col-md-4
            h2 Bookings
            p You can check prices and availability of tours for any day of the year, request a specific guide and book your personal adventure around the streets and spaces of Barcelona.  
            a.btn.btn-default(href="/bookings") View Bookings
        .col-md-4
            h2 Contact Us
            p About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us. About Us.  
            a.btn.btn-default(href="#") View Details
